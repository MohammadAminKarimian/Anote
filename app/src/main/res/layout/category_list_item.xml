<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_list_item_parentView"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeightLarge"
    android:clickable="true"
    android:focusable="true"
    android:layoutDirection="rtl">


    <ImageView
        android:id="@+id/category_list_item_IV"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_mathematical_icon" />

    <TextView
        android:id="@+id/category_list_item_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/category_list_item_IV"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="نام درس" />


    <View
        style="@style/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/category_list_item_TV"
        android:layout_alignParentBottom="true"
        android:background="#E3E3E3" />
</RelativeLayout>