<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="144dp"
            android:layout_height="192dp">

            <TextView
                android:id="@+id/home_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="مهندسی اینترنت"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                style="@style/ptsReg"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/home_list_item_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="فروزش"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/home_list_item_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="18dp"
                android:textSize="12sp"
                style="@style/ptsReg"/>

            <ImageView
                android:id="@+id/home_list_item_Image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                tools:src="@android:color/holo_blue_dark"
                app:layout_constraintTop_toBottomOf="@id/home_list_item_teacher_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/home_list_item_university"/>

            <TextView
                android:id="@+id/home_list_item_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="شهید چمران"
                app:layout_constraintTop_toBottomOf="@id/home_list_item_Image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                style="@style/ptsReg"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

